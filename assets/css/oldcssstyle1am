  }
}

/* Oscilloscope smear/glitch burst on hover */
.t-item::after{
  content:"";
  position:absolute;
  inset:0;
  pointer-events:none;
  opacity:0;

  background:
    repeating-linear-gradient(
      to bottom,
      rgba(255,255,255,0.10) 0 1px,
      rgba(0,0,0,0.00) 1px 4px
    ),
    repeating-linear-gradient(
      115deg,
      rgba(255,255,255,0.07) 0 2px,
      rgba(0,0,0,0.00) 2px 10px
    );

  mix-blend-mode: overlay;
  transform: translateX(0);
}

@media (hover:hover){
  .t-item:hover::after{
    opacity: var(--glitchOpacity);
    animation: scopeGlitch 0.22s steps(2,end) 1;
  }
}
@keyframes scopeGlitch{
  0%   { transform: translateX(0); }
  25%  { transform: translateX(-3px); }
  50%  { transform: translateX(3px); }
  75%  { transform: translateX(-1px); }
  100% { transform: translateX(0); }
}

